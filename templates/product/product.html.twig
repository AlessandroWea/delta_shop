{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block header %}
{% endblock %}

{% block nav %}
{% endblock %}

{% block breadcrumb %}
    {% include('default/_breadcrumb.html.twig') %}
{% endblock %}

{% block stylesheets %}
        {{ encore_entry_link_tags('comments') }}
{% endblock %}

{% block javascripts %}
        {{ encore_entry_script_tags('comments') }}
{% endblock %}


{% block section %}
<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- Product main img -->
			<div class="col-md-5 col-md-push-2">
				<div id="product-main-img">
					<div class="product-preview">
						<img src="{{ sonata_path(product.image, 'small') }}" alt="">
					</div>
					{% for image in additional_images %}
						<div class="product-preview">
							<img src="{{ sonata_path(image, 'small') }}" alt="">
						</div>
					{% endfor %}
				</div>
			</div>
			<!-- /Product main img -->

			<!-- Product thumb imgs -->
			<div class="col-md-2  col-md-pull-5">
				<div id="product-imgs">
					<div class="product-preview">
						<img src="{{ sonata_path(product.image, 'small') }}" alt="">
					</div>
					{% for image in additional_images %}
						<div class="product-preview">
							<img src="{{ sonata_path(image, 'small') }}" alt="">
						</div>
					{% endfor %}
				</div>
			</div>
			<!-- /Product thumb imgs -->

			<!-- Product details -->
			<div class="col-md-5">
				<div class="product-details">
					<h2 class="product-name">{{ product.name }}</h2>
					<div>
						<div class="product-rating">
							{{
								render(controller('App\\Controller\\ProductController::productRatingShort', {'product':product}))
							}}
						</div>
						<a class="review-link" data-toggle="tab" href="#tab3">{{ comments|length }} Review(s) | Add your review</a>
					</div>
					<div>
						<h3 class="product-price">{{ product.price }}$ <!-- <del class="product-old-price">$990.00</del> --></h3>
						<span class="product-available">In Stock</span>
					</div>
					<p>{{ product.description | raw }}</p>

					<div class="add-to-cart">
						<div class="qty-label">
							Qty
							<div class="input-number">
								<input type="number">
								<span class="qty-up">+</span>
								<span class="qty-down">-</span>
							</div>
						</div>
						<button class="add-to-cart-btn"><a href="{{ path('cartAdd', {id: product.id}) }}" ><i class="fa fa-shopping-cart"></i> add to cart</a></button>
					</div>

					<ul class="product-links">
						<li>Category:</li>
						{% for category in product_categories %}
							<li><a href="{{ path('category', {'id' : category.id}) }}">{{ category.name }}</a></li>
						{% endfor %}
					</ul>

				</div>
			</div>
			<!-- /Product details -->

			<!-- Product tab -->
			<div class="col-md-12">
				<div id="product-tab">
					<!-- product tab nav -->
					<ul class="tab-nav">
						<li class="active"><a data-toggle="tab" href="#tab1">Description</a></li>
						<li><a data-toggle="tab" href="#tab3">Reviews ({{ comments|length }})</a></li>
					</ul>
					<!-- /product tab nav -->

					<!-- product tab content -->
					<div class="tab-content">
						<!-- tab1  -->
						<div id="tab1" class="tab-pane fade in active">
							<div class="row">
								<div class="col-md-12">
									<p>{{ product.description | raw }}</p>
								</div>
							</div>
						</div>
						<!-- /tab1  -->
						<!-- tab2  -->
						<div id="tab3" class="tab-pane fade in">
							<div class="row">
								<!-- Rating -->
								{% include('product/_rating_box.html.twig') %}
								<!-- /Rating -->

								<div class="col-md-6">
									<div id="reviews">
										<ul class="reviews">
											<!-- js rendering here -->
										</ul>
										<div style="text-align: center;" class="buttons">
											<button id="more-comments-btn">More comments</button>
										</div>
									</div>
								</div>

								<!-- Review Form -->
								{{
									render(controller('App\\Controller\\CommentController::commentForm', { 'id' : product.id }))
								}}
								<!-- /Review Form -->
							</div>
						</div>
						<!-- /tab3  -->
					</div>
					<!-- /product tab content  -->
				</div>
			</div>
			<!-- /product tab -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /SECTION -->

<!-- Section -->
<input type="hidden" id="product-id-holder" value="{{ product.id }}">
{% endblock %}

{% block footer %}
{% endblock %}

