{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block header %}
{% endblock %}

{% block nav %}
{% endblock %}

{% block breadcrumb %}
    {% include('default/_breadcrumb.html.twig') %}
{% endblock %}

{% block section %}
		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- Product main img -->
					<div class="col-md-5 col-md-push-2">
						<div id="product-main-img">
							{% for image in product_images %}
								<div class="product-preview">
									<img src="{{ asset(image)}}" alt="">
								</div>
							{% endfor %}
			
						</div>
					</div>
					<!-- /Product main img -->

					<!-- Product thumb imgs -->
					<div class="col-md-2  col-md-pull-5">
						<div id="product-imgs">
							{% for image in product_images %}
								<div class="product-preview">
									<img src="{{ asset(image)}}" alt="">
								</div>
							{% endfor %}
						</div>
					</div>
					<!-- /Product thumb imgs -->

					<!-- Product details -->
					<div class="col-md-5">
						<div class="product-details">
							<h2 class="product-name">{{ product.name }}</h2>
							<div>
								<div class="product-rating">
									{{
										render(controller('App\\Controller\\ProductController::productRatingShort', {'product':product}))
									}}
								</div>
								<a class="review-link" data-toggle="tab" href="#tab3">{{ comments|length }} Review(s) | Add your review</a>
							</div>
							<div>
								<h3 class="product-price">{{ product.price }}$ <!-- <del class="product-old-price">$990.00</del> --></h3>
								<span class="product-available">In Stock</span>
							</div>
							<p>{{ product.description }}</p>

							<div class="add-to-cart">
								<div class="qty-label">
									Qty
									<div class="input-number">
										<input type="number">
										<span class="qty-up">+</span>
										<span class="qty-down">-</span>
									</div>
								</div>
								<button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
							</div>

							<ul class="product-links">
								<li>Category:</li>
								{% for category in product_categories %}
									<li><a href="{{ path('category', {'id' : category.id}) }}">{{ category.name }}</a></li>
								{% endfor %}
							</ul>

						</div>
					</div>
					<!-- /Product details -->

					<!-- Product tab -->
					<div class="col-md-12">
						<div id="product-tab">
							<!-- product tab nav -->
							<ul class="tab-nav">
								<li class="active"><a data-toggle="tab" href="#tab1">Description</a></li>
								<li><a data-toggle="tab" href="#tab3">Reviews ({{ comments|length }})</a></li>
							</ul>
							<!-- /product tab nav -->

							<!-- product tab content -->
							<div class="tab-content">
								<!-- tab1  -->
								<div id="tab1" class="tab-pane fade in active">
									<div class="row">
										<div class="col-md-12">
											<p>{{ product.description }}</p>
										</div>
									</div>
								</div>
								<!-- /tab1  -->
								<!-- tab2  -->
								<div id="tab3" class="tab-pane fade in">
									<div class="row">
										<!-- Rating -->
										{% include('product/_rating_box.html.twig') %}
										<!-- /Rating -->

										<!-- Reviews -->
										{% include('product/_comment_list.html.twig') %}
										<!-- /Reviews -->

										<!-- Review Form -->
										{% include('product/_comment_form.html.twig') %}
										<!-- /Review Form -->
									</div>
								</div>
								<!-- /tab3  -->
							</div>
							<!-- /product tab content  -->
						</div>
					</div>
					<!-- /product tab -->
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /SECTION -->

		<!-- Section -->

{% endblock %}

{% block footer %}
{% endblock %}