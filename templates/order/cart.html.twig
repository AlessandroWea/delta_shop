{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block section %}
    <style>
        .itemClass {
            text-decoration: none;
            color: #222222;
        }

        .itemClass:hover {
            text-decoration: none;
            color: #222222;
        }
    </style>
    <div class="example-wrapper">
        <h1>{{ title }}</h1>
        <hr>

        {% set sum = 0 %}
        {% for item in items %}
            <div class="col-md-12">
                <div class="card mb-12 shadow-sm">
                    <div class="card-body">
                        <h4>{{ item.product.name }}</h4>
                        <p class="card-text">{{ item.product.description }}</p>
                        <h5>{{ item.product.price }} руб</h5>
                        {% set sum = sum + item.product.price %}
                    </div>
                </div>
            </div>
        {% endfor %}

        <hr>
        <h4>Итого: {{ sum }}</h4>
        <a href="{{ path('order') }}" class="float-right btn btn-success mt-2">Оформить заказ</a>
    </div>
{% endblock %}
