<div class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
        <i class="fa fa-shopping-cart"></i>
        <span>Your Cart</span>
            <div class="qty">{{ total_count_of_items }}</div>
    </a>
    <div class="cart-dropdown">

        <div class="cart-list">
            {% for item in items %}
                <div class="product-widget">
                    <div class="product-img">
                        <img src="{{ sonata_path(item.product.image,'small') }}" alt="">
                    </div>
                    <div class="product-body">
                        <h3 class="product-name"><a href="{{ path('product', {id : item.product.id}) }}">{{ item.product.name }}</a></h3>
                        <h4 class="product-price"><span class="qty">{{ item.quantity }}x</span>${{ item.product.price }}</h4>
                    </div>
                    <!-- <button class="delete"><a href=""><i class="fa fa-close"></i></a></button> -->
                </div>
            {% endfor %}

        </div>
        <div class="cart-summary">
            <small>{{ total_count_of_items }} Item(s) selected</small>
            <h5>SUBTOTAL: {{ total_price }}$</h5>
        </div>
        <div class="cart-btns">
            <a href="{{ path('cart') }}">View Cart</a>
            <a href="">Checkout <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>

