{% extends 'base.html.twig' %}

{% block title %} Log In {% endblock %}

{% block section %}
    <div class="page-content pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-container mt-4">
                        <h1 class="h3 mb-3 font-weight-normal text-center title-gradient-1">
                            Sign In
                        </h1>
                        <form method="post" id="form">

                            <div class="form-group">
                                <label for="inputEmail">Email address *</label>
                                <input type="email" value="{{ last_username }}" class="form-control" id="inputEmail" name="email" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="inputPassword">Password *</label>
                                <input type="password" class="form-control" id="inputPassword" name="password" required>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="rememberMe" name="_remember_me">
                                    <label class="custom-control-label" for="rememberMe">Remember Me</label>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-footer-buttons">
                                <button type="submit" class="btn btn-success">
                                    <span>LOG IN</span>
                                </button>
                                <a href="{{ path('app_register') }}" class="btn btn-link btn-dark">
                                    <i class="fa fa-user"></i>
                                    <span>Create an account</span>
                                </a>
                                <a href="{{ path('app_forgot_password_request') }}" class="btn btn-link btn-dark">
                                    <i class="fa fa-key"></i>
                                   <span>Reset your password</span>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

