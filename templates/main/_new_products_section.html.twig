<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">New Products</h3>
                    <div class="section-nav">
                        <ul class="section-tab-nav tab-nav">
                            {% for category in categories %}
                                {% if loop.first %}
                                    <li class="active"><a data-toggle="tab" href="#tabN{{ loop.index0 }}">{{ category.name }}</a></li>
                                {% else %}
                                    <li><a data-toggle="tab" href="#tabN{{ loop.index0 }}">{{ category.name }}</a></li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /section title -->

            <!-- Products tab & slick -->
            <div class="col-md-12">
                <div class="row">
                    <div class="products-tabs">
                        {% for category in categories %}
                            <!-- tab -->
                            <div id="tabN{{ loop.index0 }}" class="tab-pane {% if loop.index0 == 0%} active {% endif %}">
                                <div class="products-slick" data-nav="#slick-nav-1">
                                    {{
                                        render(controller('App\\Controller\\MainController::newProductsList', {'category': category}))
                                    }}
                                </div>
                                <div id="slick-nav-1" class="products-slick-nav"></div>
                            </div>
                            <!-- /tab -->
                        {% endfor %}
                        <!-- tab -->
                    
                        <!-- /tab -->
                    </div>
                </div>
            </div>
            <!-- Products tab & slick -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>