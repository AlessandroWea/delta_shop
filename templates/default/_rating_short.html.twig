{% if rating != 0 %}
    {% for i in range(0, rating - 1) %}
        <i class="fa fa-star"></i>
    {% endfor %}
    {% if 5 - rating > 0 %}
        {% for i in range(0, 5 - rating - 1) %}
            <i class="fa fa-star-o"></i>
        {% endfor %}
    {% endif %}
{% else %}
        <i class="fa fa-star-o"></i>
        <i class="fa fa-star-o"></i>
        <i class="fa fa-star-o"></i>
        <i class="fa fa-star-o"></i>
        <i class="fa fa-star-o"></i>
{% endif %}