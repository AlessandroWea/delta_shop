{% extends 'base.html.twig' %}

{% block title %}My profile{% endblock %}

{% block breadcrumb %}
<div id="breadcrumb" class="section">

    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li><a href="{{ path('homepage') }}">Home</a></li>
                    <li class="active">Profile</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>

</div>
{% endblock %}

{% block section %}

<style>
    .profile-menu li {
        width: 100%;
    }

    .profile-container {
        border: 1px solid #aaa;
    }
</style>

    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="profile-menu">
                        <ul class="nav nav-pills flex-column ">
                            <li class="active"><a href="{{ path('profile') }}" class="nav-link">Main info</a></li>
                            <li class="nav-item"><a href="" class="nav-link">Your orders</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-10 text-center">
                    <div class="profile-container">
                        <h1 class="h4 mb-3 font-weight-normal title-gradient-1" id="page_header_title">Welcome, to your profile!</h1>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>Your email: </td>
                                    <td>{{ app.user.email }}</td>
                                </tr>
                                <tr>
                                    <td>Your full name: </td>
                                    <td>{{ app.user.fullname }}</td>
                                </tr>
                                <tr>
                                    <td>Your phone: </td>
                                    <td>{{ app.user.phone }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="alert alert-info">
                            Please, before you make some order fill your full information.
                        </div>
                        <hr/>
                        <div class="form-footer-buttons">
                            <a href="{{ path('profile_edit') }}" class="btn btn-link btn-dark">
                                <i class="far fa-address-card"></i>
                                <span>EDIT PROFILE INFO</span>
                            </a>
                            <a href="{{ path('app_logout') }}" class="btn btn-link btn-dark">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>LOGOUT</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}